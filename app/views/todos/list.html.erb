<div class="container">
	<div class="row">

		<div class="col-md-6">
			<% @todos.each do |todo| %>
				<% if todo.completed == false %>
					<div class="well">
						<h1> <%= todo.description %> </h1>
						<p> <%= todo.completed %> </p>
					</div>
				<% end %>
			<% end %>
		</div>
		<div class="col-md-6">
			<% @todos.each do |todo| %>
				<% if todo.completed == true %>
					<div class="well">
						<h1> <%= todo.description %> </h1>
						<p> <%= todo.completed %> </p>
					</div>
				<% end %>
			<% end %>
		</div>	
	</div>
</div>