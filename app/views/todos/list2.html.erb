
<% @todos.each do |todo| %>
	<div class="container">
		<div class="row">
			<% if todo.completed = "true" %>
				<div class="col-md-6">
					<h1> <%= todo.description %> </h1>
					<p> <%= todo.completed %> </p>
				</div>
			<% else %>
				<div class="col-md-6">
					<h1> <%= todo.description %> </h1>
					<p> <%= todo.completed %> </p>
				</div>
			<% end %>
		</div>
	</div>
<% end %>